{
  "name": "hkn-server",
  "version": "1.0.0",
  "description": "HKN's Server",
  "main": "dist/index.js",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "start": "cross-env NODE_ENV=development tsc-watch --onSuccess \"node -r dotenv/config . dotenv_config_path=./.env\"",
    "prebuild": "npm-run-all clean lint",
    "build": "tsc",
    "build:no-check": "tsc",
    "prestart": "npm run build",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "local:test": "jest --setupFiles dotenv/config",
    "pretypeorm": "npm-run-all clean build:no-check",
    "typeorm": "cross-env NODE_ENV=development node -r module-alias/register ./node_modules/typeorm/cli.js",
    "typeorm:release": "node -r module-alias/register ./node_modules/typeorm/cli.js",
    "typeorm:sync": "npm run typeorm schema:sync",
    "migration:gen": "npm run typeorm migration:generate --",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "migration:create": "npm run typeorm migration:create --",
    "migration:run:release": "npm run typeorm:release migration:run",
    "seed:gen": "npm run typeorm migration:generate -- -c seed --",
    "seed:create": "npm run typeorm migration:create -- -c seed --",
    "seed:run": "npm run typeorm migration:run -- -c seed -t=each",
    "seed:revert": "npm run typeorm migration:revert -- -c seed -t=each",
    "compose:seed": "NODE_ENV=development npm run migration:run; npm run typeorm migration:run -- -c seed -t=each",
    "compose:start": "npm-run-all compose:seed start"
  },
  "author": "",
  "type": "commonjs",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "7.2.1",
    "@types/connect-datadog": "0.0.5",
    "aws-sdk": "2.773.0",
    "body-parser": "1.19.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.13.1",
    "class-validator-jsonschema": "2.0.2",
    "compression": "1.7.4",
    "connect-datadog": "0.0.9",
    "cors": "2.8.5",
    "date-fns": "2.16.1",
    "express": "4.17.1",
    "express-rate-limit": "5.1.3",
    "firebase": "7.15.5",
    "firebase-admin": "8.9.2",
    "module-alias": "2.2.2",
    "morgan": "1.10.0",
    "multer": "1.4.2",
    "pg": "8.3.0",
    "redoc-express": "1.0.0",
    "reflect-metadata": "0.1.13",
    "routing-controllers": "0.8.0",
    "routing-controllers-openapi": "2.1.0",
    "typeorm": "0.2.32",
    "typescript": "3.9.5",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.0",
    "@types/compression": "1.7.0",
    "@types/cors": "2.8.6",
    "@types/express": "^4.17.6",
    "@types/express-rate-limit": "5.0.0",
    "@types/jest": "26.0.10",
    "@types/morgan": "1.9.1",
    "@types/multer": "1.4.4",
    "@types/node": "16.0.0",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "3.1.0",
    "@typescript-eslint/parser": "3.1.0",
    "cross-env": "7.0.2",
    "dotenv": "8.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "lint-staged": "10.2.9",
    "npm-run-all": "4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "3.0.2",
    "supertest": "4.0.2",
    "ts-jest": "26.2.0",
    "ts-node": "8.10.2",
    "tsc-watch": "4.2.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,js,css,md}": "prettier --write"
  },
  "_moduleAliases": {
    "@Services/Interfaces": "dist/services/interfaces",
    "@Services": "dist/services",
    "@Payloads": "dist/payloads",
    "@Controllers": "dist/controllers",
    "@Entities": "dist/entities",
    "@Decorators": "dist/decorators",
    "@Middlewares": "dist/middlewares",
    "@Mappers": "dist/mappers",
    "@Repositories": "dist/repositories",
    "@Config": "dist/config.js",
    "@Logger": "dist/logging.js"
  }
}
