{
  "name": "hkn-server",
  "version": "1.0.0",
  "description": "HKN's Server",
  "main": "dist/index.js",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "start": "cross-env NODE_ENV=development tsc-watch --onSuccess \"node .\"",
    "prebuild": "npm-run-all clean lint",
    "build": "tsc",
    "prestart": "npm run build",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "typeorm": "node -r module-alias/register ./node_modules/typeorm/cli.js",
    "typeorm:sync": "node -r module-alias/register ./node_modules/typeorm/cli.js schema:sync",
    "pretypeorm:sync": "npm-run-all clean build"
  },
  "author": "",
  "type": "commonjs",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.2.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^2.0.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "firebase": "^7.15.5",
    "firebase-admin": "^8.9.2",
    "module-alias": "^2.2.2",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "0.8.0",
    "routing-controllers-openapi": "^2.0.1",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.25",
    "typeorm-typedi-extensions": "^0.2.3",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/express-rate-limit": "^5.0.0",
    "@types/hapi__joi": "^17.1.4",
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.26",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,js,css,md}": "prettier --write"
  },
  "_moduleAliases": {
    "@Services": "dist/services",
    "@Payloads": "dist/payloads",
    "@Controllers": "dist/controllers",
    "@Entities": "dist/entities",
    "@Decorators": "dist/decorators",
    "@Middlewares": "dist/middlewares"
  }
}
